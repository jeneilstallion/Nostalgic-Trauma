enum YearOfBirth {
    case early60s
    case mid70s
    case late70s
    case early2010s
    case mid2010s
    case late2010s
    case early2020s
}

enum YearOfBirth: Int {
    case early2000s = 2000
    case mid2000s = 2005
    case late2000s = 2010
    case early2010s = 2015
    case mid2010s = 2020
    case late2010s = 2025
    case early2020s = 2030
    case unknown = 9999
}

