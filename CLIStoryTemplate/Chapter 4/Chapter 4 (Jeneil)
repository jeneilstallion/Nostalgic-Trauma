//Conditional
    
    
// Example usage of the enum with a for loop
for year in YearOfBirth.early2000s.rawValue...YearOfBirth.mid2010s.rawValue {
    let birthYear = YearOfBirth(rawValue: year) ?? .unknown
    print("A person born in \(year) is from the \(birthYear) era.")
}

